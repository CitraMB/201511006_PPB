<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="26dp"
        android:text="@string/SpeedController"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/OffOn"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="19dp"
        android:text="@string/ButtonOff"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/BalingBaling"
        android:layout_width="227dp"
        android:layout_height="249dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="318dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OffOn"
        app:layout_constraintVertical_bias="0.335"
        app:srcCompat="@drawable/pngtreefan_icon_4421643" />

    <Switch
        android:id="@+id/Lights"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="64dp"
        android:text="@string/LightsText"
        app:layout_constraintStart_toEndOf="@+id/OffOn"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/SpeedSeek"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="225dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:max="3"
        android:progress="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OffOn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:text="@string/Speed"
        app:layout_constraintEnd_toStartOf="@+id/SpeedSeek"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OffOn" />

</androidx.constraintlayout.widget.ConstraintLayout>